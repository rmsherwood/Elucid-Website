<div class="item-thumb" data-thumbs="{{ fields.field_testimonial_avatar.content|striptags|trim }}">
   <article class="testimonial-node-v2">      
      <div class="testimonial-content row">
         <div class="content col-md-12 col-sm-12 col-xs-12">
            <div class="content-inner text-left">
               <div class="quote">
                  {{ fields.body.content|striptags|trim }}
               </div>  
               <div class="info">
                  <span class="title"> 
                     {{ fields.field_testimonial_name.content }}
                  </span><span>, </span> 
                   <span class="job"> 
                     {{ fields.field_testimonial_job.content }}
                  </span>
               </div>   
            </div>    
         </div>
      </div>
   </article>
</div>